{
  "swagger": "2.0",
  "info": {
    "title": "Hotel API",
    "description": "API for managing hotels",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/hotel/chambres": {
      "get": {
        "tags": ["Chambres"],
        "summary": "Get all rooms",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 1
                  },
                  "name": {
                    "type": "string",
                    "example": "Standard Room"
                  },
                  "price": {
                    "type": "number",
                    "format": "double",
                    "example": 100.0
                  }
                }
              }
            }
          }
        }
      }
    },
    "/rooms/{id}": {
      "get": {
        "tags": ["Rooms"],
        "summary": "Get a room by ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the room",
            "type": "integer",
            "example": 1
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "example": 1
                },
                "name": {
                  "type": "string",
                  "example": "Standard Room"
                },
                "price": {
                  "type": "number",
                  "format": "double",
                  "example": 100.0
                }
              }
            }
          },
          "404": {
            "description": "Room not found"
          }
        }
      }
    }
  },
  "definitions": {
    "Room": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64",
          "description": "The unique identifier for the room"
        },
        "name": {
          "type": "string",
          "description": "The name of the room"
        },
        "price": {
          "type": "number",
          "format": "double",
          "description": "The price of the room per night"
        }
      }
    }
  }
}
